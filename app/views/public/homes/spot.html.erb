<h3 class = "col-md-10 offset-md-1 text-center mb-3">スポットで探す</h3>

<div class = "d-flex justify-content-center flex-wrap col-md-8 offset-md-2 mb-3">
  <% @spots.each do |spot| %>
    <div class = "mx-5">
      <%= link_to posts_path(spot_id: spot.id) do %>
        ○<%= spot.name %>
      <% end %>
    </div>
  <% end %>
</div>

<div data-controller="google-map--index">
  <div class = "col-md-10 offset-md-1 mb-3">
    <div class="mx-auto" data-google-map--index-target="map" data-json="<%= @spots_json %>" style="height:50vh;max-width:75%;"></div>
  </div>
</div>

<div class = "d-flex justify-content-center">
  <div class = "mx-5">
    <%= link_to "/homes/area" do %>
      <p>エリア一覧</p>
    <% end %>
  </div>
  <div class = "mx-5">
    <%= link_to "/homes/genre" do %>
      <p>ジャンル一覧</p>
    <% end %>
  </div>
</div>