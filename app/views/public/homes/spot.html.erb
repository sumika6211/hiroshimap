<div class = "tab-area d-flex justify-content-center mb-1">
  <h3 class = "tab active text-center mx-3">
    <i class="fa-solid fa-location-dot"></i> スポットで探す
  </h3>
  <h3 class = "tab text-center mx-3">
    <i class="fa-solid fa-hashtag"></i> ジャンルで探す
  </h3>
  <h3 class = "tab text-center mx-3">
    <i class="fa-solid fa-map"></i> エリアで探す
  </h3>
</div>

<div class = "content-area col-md-8 mx-auto mb-3">
  <div class = "content show">
    <div class = "d-flex justify-content-center flex-wrap">
      <% @spots.each do |spot| %>
        <div class = "mx-5 mb-2 px-3 py-1 rounded-pill bg-info">
          <%= link_to posts_path(spot_id: spot.id), class: "text-light" do %>
            <i class="fa-solid fa-location-dot"></i> <%= spot.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class = "content">
    <div class = "d-flex justify-content-center flex-wrap">
      <% @genres.each do |genre| %>
        <div class = "mx-5 mb-2 px-3 py-1 rounded-pill bg-info">
          <%= link_to posts_path(genre_id: genre.id), class: "text-light" do %>
            <i class="fa-solid fa-hashtag"></i> <%= genre.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class = "content">
    <div class = "d-flex justify-content-center flex-wrap">
      <% @areas.each do |area| %>
        <div class = "mx-5 mb-2 px-3 py-1 rounded-pill bg-info">
          <%= link_to posts_path(area_id: area.id), class: "text-light" do %>
            <i class="fa-solid fa-map"></i> <%= area.name %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div data-controller="google-map--index">
  <div class = "col-md-10 offset-md-1 mb-3">
    <div class="mx-auto" data-google-map--index-target="map" data-json="<%= @spots_json %>" style="height:50vh;max-width:75%;"></div>
  </div>
</div>

<div class = "col-md-3 mx-auto py-1 text-center rounded-pill bg-info">
  <%= link_to posts_path, class: "text-light" do %>
    <h4>投稿一覧</h4>
  <% end %>
</div>