<% followers.each do |follower| %>
  <div class="d-flex justify-content-center mb-3">
    <div class="col-md-1 col-4">
      <%= link_to user_path(follower) do %>
        <%= image_tag follower.get_profile_image, class: "rounded-circle" %>
      <% end %>
    </div>
    <table class="col-md-2 col-7">
      <tr>
        <th>name：</th>
        <th><%= follower.name %></th>
        <th></th>
      </tr>
      <tr>
        <th>投稿：</th>
        <th><%= follower.posts.count %></th>
        <th></th>
      </tr>
      <% if follower != current_user %>
        <tr>
          <% if current_user.followeds?(follower) %>
            <th><%= link_to "フォロー外す", user_relationships_path(follower), method: :delete %></th>
          <% else %>
            <th><%= link_to "フォローする", user_relationships_path(follower), method: :post %></th>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>