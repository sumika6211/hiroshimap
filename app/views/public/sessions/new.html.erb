<div class = "row">
  <div class = "col-md-6 mx-auto my-3">
    <h2>ログイン</h2>

    <%= form_with model: @user, url: user_session_path do |f| %>
      <div class="field col-md-8">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field col-md-8">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field col-md-8">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions col-md-8">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class = "col-md-8 my-3">
      <%= render "devise/shared/links" %>
    </div>

    <div class = "col-md-8 my-3">
      <%= link_to "ゲストとしてログインする", guest_sign_in_path, method: :post %>
    </div>
  </div>
</div>