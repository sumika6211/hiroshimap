<div class="posting col-md-8 col-12 mx-md-auto">

  <% if @post.errors.any? %>
    <div class="errors-message mx-auto">
      <%= @post.errors.count %>件のエラーが発生しました
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h4>投稿フォーム</h4>

  <%= form_with model: @post, url: posts_path, method: :post do |f| %>

    <%= render "form", f: f %>

    <div class="actions col-md-8 col-10 mb-3">
      <%= f.submit "投稿する", class: "btn btn-success" %>
    </div>

  <% end %>

</div>