<div class="list d-flex justify-content-center flex-wrap col-md-11 col-12 mx-auto">
  <% posts.each do |post| %>
    <div class="card col-md-3 col-12 mx-md-2 my-md-3 my-3 shadow">
      <%= image_tag 'hiroshima.jpg', class: "card-img" %>
        <div class="card-img-overlay p-0">
          <h6 class="col-10 mx-auto text-center"><%= post.name %></h6>
          <div class="col-10 mx-auto text-center">
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image(400,400,300,200), class: "img-fluid" %>
            <% end %>
          </div>
          <p class="col-10 mx-auto">いいね！<%= post.favorites.count %>件</p>
        </div>
    </div>
  <% end %>
</div>