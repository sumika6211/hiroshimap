<h3 class="text-center">My profile</h3>
<div class="row justify-content-center">
  <div class="user-image col-md-6 col-3 text-center">
    <div>
      <%= link_to user_path(current_user.id), "data-turbolinks": false do %>
        <%= image_tag current_user.get_profile_image, class: "rounded-circle" %><br>
        <%= current_user.name %>
      <% end %>
    </div>
  </div>

  <div class="col-md-6 col-5 mt-2">
    <%= link_to user_relationships_path(current_user.id), "data-turbolinks": false, class: "text-dark" do %>
      <p>フォロー:<%= current_user.followeds.count %></p>
    <% end %>
    <%= link_to user_relationships_path(current_user.id), "data-turbolinks": false, class: "text-dark" do %>
      <p>フォロワー:<%= current_user.followers.count %></p>
    <% end %>
  </div>
</div>

<div class="col-md-10 col-6 mx-auto text-center mt-3">
  <div class="mb-3">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
  <div>
    <%= link_to new_post_path, class: "btn btn-outline-secondary btn-block" do %>
      <i class="fa-solid fa-pen-to-square"></i>
    <% end %>
  </div>
</div>