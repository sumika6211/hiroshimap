<div class = "post-user-profile">
  <%= image_tag @post.user.get_profile_image(100,100) %>
  <%= @post.user.name %>
</div>

<div class ="post-detail">
  <p>店名：<%= @post.name %></p>
  <p><%= image_tag @post.get_post_image(500,500) %></p>
  <p><%= @post.introduction %></p>
  <p><%= @post.created_at.strftime('%Y/%m/%d') %></p>
</div>