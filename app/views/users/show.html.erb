<h3 class = "row justify-content-center mb-3">Users info</h3>

<div class = "d-flex justify-content-center mb-3">
  <div class = "col-3　mr-0">
    <%= image_tag @user.get_profile_image(100,100) %>
  </div>
  <table class = "col-2">
    <tr>
      <th>name：</th>
      <th><%= @user.name %></th>
      <th></th>
    </tr>
    <tr>
      <th>投稿：</th>
      <th><%= @user.posts.count %></th>
      <th>
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user.id) do %>
            編集
          <% end %>
        <% end %>
      </th>
    </tr>
  </table>
</div>

<div class = "d-flex justify-content-center flex-wrap">
  <% @posts.each do |post| %>
    <div class = "col-4">
      <%= link_to post_path(post.id) do %>
        <table class = "post-table">
          <tr>
            <th>店名：<%= post.name %></th>
          </tr>
          <tr>
            <td><%= image_tag post.get_post_image(300,300) %></td>
          </tr>
        </table>
      <% end %>
      <p>いいね！<%= post.favorites.count %>件</p>
    </div>
  <% end %>
</div>