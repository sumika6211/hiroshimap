<!DOCTYPE html>
<html>
  <head>
    <title>admin Hiroshimap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <script src="https://kit.fontawesome.com/d9d2324d55.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class = "navbar navbar-expand-lg bg-info">
        <div class = "container">
          <div class = "navbar-logo p-3">
            <h2>HiroshiMap</h2>
          </div>
          <ul class = "navbar-nav">
            <div class = "row ml-auto">
              <% if admin_signed_in? %>
                <li class = "nav-link">スポット一覧<%= current_user.name %>さん！</li>
                <li class = "nav-link">
                  <%= link_to "エリア一覧", "/homes/spot" %>
                </li>
                <li class = "nav-link">
                  <%= link_to "ジャンル一覧", user_path(current_user.id), "data-turbolinks": false %>
                </li>
                <li class = "nav-link">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                </li>
              <% else %>
                <li class = "nav-link">ようこそゲストさん！</li>
                <li class = "nav-link">
                  <%= link_to "/homes/spot" do %>
                    スポット一覧
                  <% end %>
                </li>
                <li class = "nav-link">
                  <%= link_to new_user_registration_path do %>
                    新規登録
                  <% end %>
                </li>
                <li class = "nav-link">
                  <%= link_to new_user_session_path do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </div>
          </ul>
        </div>
      </nav>
    </header>

    <div class="container-fluid">
      <%= yield %>
    </div>

  </body>
</html>