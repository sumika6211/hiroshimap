<div class = "row justify-content-center">
  <div class = "col-8">

    <h4>エリアを作成する</h4>

    <%= form_with model: @area, url: areas_path, method: :post do |f| %>
      <div class = "field mb-3">
        <%= f.label :"エリア名" %>
        <%= f.text_field :name, class: "form-control", placeholder: "エリア名を入力してください" %>
      </div>

      <div class = "actions mb-3">
        <%= f.submit "作成する", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= link_to areas_path do %>
      <p>エリア一覧</p>
    <% end %>

  </div>
</div>