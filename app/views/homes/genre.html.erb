<h2 class = "col-md-10 offset-md-1 text-center mb-3">ジャンルで探す</h2>

<div class = "d-flex justify-content-center flex-wrap col-md-8 offset-md-2 mb-3">
  <% @genres.each do |genre| %>
    <div class = "mx-5">
      <%= link_to posts_path(genre_id: genre.id) do %>
        ○<%= genre.name %>
      <% end %>
    </div>
  <% end %>
</div>

<div class = "d-flex justify-content-center">
  <div class = "mx-5">
    <%= link_to "/homes/spot" do %>
      <p>スポット一覧</p>
    <% end %>
  </div>
  <div class = "mx-5">
    <%= link_to "/homes/area" do %>
      <p>エリア一覧</p>
    <% end %>
  </div>
</div>