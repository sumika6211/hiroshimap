<div class = "row">
  <div class = "col-md-10 offset-md-2">

    <%= link_to new_admin_area_path do %>
      <p>エリア作成</p>
    <% end %>

    <h4 class = "my-3">エリア一覧</h4>

    <table class = "area-table table-bordered table-sm col-md-8 mb-3">
      <thead class="table-info">
        <tr>
          <th>エリアID</th>
          <th>エリア名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @areas.each do |area| %>
          <tr>
            <td><%= area.id %></td>
            <td><%= area.name %></td>
            <td>
              <%= link_to edit_admin_area_path(area) do %>
                編集する
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>