<div class="row">
  <div class="col-md-6 col-10 mx-auto my-3">
    <h2>管理者ログイン画面</h2>

    <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
      <div class="field col-md-8">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field col-md-8">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field col-md-8">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions col-md-8">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>
  </div>
</div>