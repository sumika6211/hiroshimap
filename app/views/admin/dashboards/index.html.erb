<div class = "row justify-content-center">
  <div class = "col-md-12">
    <h3>ユーザー一覧</h3>
    <table class = "spot-table">
      <thead>
        <tr>
          <th>ユーザーID</th>
          <th>ユーザー名</th>
          <th>メールアドレス</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to "退会させる", admin_user_path(user), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>