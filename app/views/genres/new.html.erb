<div class = "row justify-content-center">
  <div class = "col-8">

    <h4>ジャンル作成フォーム</h4>

    <%= form_with model: @genre, url: genres_path, method: :post do |f| %>
      <div class = "field mb-3">
        <%= f.label :"ジャンル名" %><br>
        <%= f.text_field :name, class: "form-control", placeholder: "ジャンル名を入力してください" %>
      </div>

      <div class = "actions　mb-3">
        <%= f.submit "作成する", class: "btn btn-success" %>
      </div>
    <% end %>

    <%= link_to genres_path do %>
      <p>ジャンル一覧</p>
    <% end %>

  </div>
</div>