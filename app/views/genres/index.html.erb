<div class = "row">
  <div class = "col-md-10 offset-md-2">

    <%= link_to new_genre_path do %>
      <p>ジャンル作成</p>
    <% end %>

    <h4>ジャンル一覧</h4>

    <table class = "genre-table">
      <thead>
        <tr>
          <th>ジャンルID</th>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.id %></td>
            <td><%= genre.name %></td>
            <td>
              <%= link_to edit_genre_path(genre.id) do %>
                編集する
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>